---
import Navigation from "./Navigation.astro";
const { title } = Astro.props;
---

<section class="bg-ironbark relative">
  <img
    src="/lake.jpg"
    alt="Aerial view of Lake Mac"
    class="absolute inset-0 z-0 h-full w-full object-cover opacity-90"
  />

  <div class="absolute inset-0 z-10 bg-black opacity-60"></div>

  <div class="relative z-40">
    <Navigation />

    <h1
      class="pt-16 pb-32 text-center text-5xl leading-tight font-bold md:text-6xl"
    >
      {title}
    </h1>
  </div>
</section>
